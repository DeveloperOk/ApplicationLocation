<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enterprise.pc.applicationlocation.MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollViewOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.enterprise.pc.applicationlocation.MainActivity" >

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.enterprise.pc.applicationlocation.MainActivity">

        <TextView
            android:id="@+id/textViewTextToDisplayLineFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/firstLineDefaultText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" />

        <TextView
            android:id="@+id/textViewTextToDisplayLineSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/secondLineDefaultText"
            app:layout_constraintTop_toBottomOf="@+id/textViewTextToDisplayLineFirst"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="1dp" />

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_start"
            android:background="@color/colorButton"
            app:layout_constraintTop_toBottomOf="@+id/textViewTextToDisplayLineSecond"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="60dp" />

        <Button
            android:id="@+id/buttonStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_stop"
            android:background="@color/colorButton"
            app:layout_constraintTop_toBottomOf="@+id/buttonStart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/buttonGraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_graph"
            android:background="@color/colorButton"
            app:layout_constraintTop_toBottomOf="@+id/buttonStop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
