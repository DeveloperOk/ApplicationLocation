<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enterprise.pc.applicationlocation.LocationGraphActivity">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/surfaceViewGraphOutlineOuterUpperPart"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorWhite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:context="com.enterprise.pc.applicationlocation.LocationGraphActivity"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/surfaceViewGraphOutlineOuterLowerPart"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="5">


                <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/constraintLayoutGraphPart"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    tools:context="com.enterprise.pc.applicationlocation.LocationGraphActivity"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewInvisibleForLongitudeSpaceAllocationOneOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="270"
                        android:text="@string/graph_constant_width_string_longitude"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/textViewInvisibleForLongitudeSpaceAllocationOneTwo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textViewMinLongitudeLineOne"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:gravity="top|center"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:text="@string/graph_longitude_min_header"
                        android:textColor="@color/colorBlack"
                        android:rotation="270"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="@+id/textViewInvisibleForLongitudeSpaceAllocationOneOne" />

                    <TextView
                        android:id="@+id/textViewInvisibleForLongitudeSpaceAllocationOneTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="270"
                        android:text="@string/graph_constant_width_string_longitude"
                        app:layout_constraintLeft_toRightOf="@+id/textViewInvisibleForLongitudeSpaceAllocationOneOne"
                        app:layout_constraintRight_toLeftOf="@+id/surfaceViewGraphOutlineVerticalPart"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textViewMinLongitudeLineTwo"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:gravity="top|center"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:text="@string/graph_longitude_min"
                        android:rotation="270"
                        android:textColor="@color/colorBlack"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="@+id/textViewInvisibleForLongitudeSpaceAllocationOneTwo" />

                    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/surfaceViewGraphOutlineVerticalPart"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:context="com.enterprise.pc.applicationlocation.LocationGraphActivity"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/textViewInvisibleForLongitudeSpaceAllocationOneTwo"
                        app:layout_constraintRight_toLeftOf="@+id/textViewInvisibleForLongitudeSpaceAllocationTwoOne" >

                        <TextView
                            android:id="@+id/textViewLatitudeSpaceAllocationOneOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/graph_constant_width_string_latitude"
                            android:visibility="invisible"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/textViewLatitudeSpaceAllocationOneTwo" />

                        <TextView
                            android:id="@+id/textViewMaxLatitudeLineOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/graph_latitude_max_header"
                            android:textColor="@color/colorBlack"
                            android:gravity="top|center"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textViewLatitudeSpaceAllocationOneOne" />

                        <TextView
                            android:id="@+id/textViewLatitudeSpaceAllocationOneTwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/graph_constant_width_string_latitude"
                            android:visibility="invisible"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewLatitudeSpaceAllocationOneOne"
                            app:layout_constraintBottom_toTopOf="@+id/surfaceViewGraph" />

                        <TextView
                            android:id="@+id/textViewMaxLatitudeLineTwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/graph_latitude_max"
                            android:textColor="@color/colorBlack"
                            android:gravity="top|center"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textViewLatitudeSpaceAllocationOneTwo" />

                        <SurfaceView
                            android:id="@+id/surfaceViewGraph"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewLatitudeSpaceAllocationOneTwo"
                            app:layout_constraintBottom_toTopOf="@+id/textViewLatitudeSpaceAllocationTwoOne" />

                        <TextView
                            android:id="@+id/textViewLatitudeSpaceAllocationTwoOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/graph_constant_width_string_latitude"
                            android:visibility="invisible"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/surfaceViewGraph"
                            app:layout_constraintBottom_toTopOf="@+id/textViewLatitudeSpaceAllocationTwoTwo" />

                        <TextView
                            android:id="@+id/textViewMinLatitudeLineOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/graph_latitude_min_header"
                            android:textColor="@color/colorBlack"
                            android:gravity="top|center"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textViewLatitudeSpaceAllocationTwoOne" />

                        <TextView
                            android:id="@+id/textViewLatitudeSpaceAllocationTwoTwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/graph_constant_width_string_latitude"
                            android:visibility="invisible"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewLatitudeSpaceAllocationTwoOne"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/textViewMinLatitudeLineTwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/graph_latitude_min"
                            android:textColor="@color/colorBlack"
                            android:gravity="top|center"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textViewLatitudeSpaceAllocationTwoTwo" />


                    </android.support.constraint.ConstraintLayout>

                    <TextView
                        android:id="@+id/textViewInvisibleForLongitudeSpaceAllocationTwoOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="270"
                        android:text="@string/graph_constant_width_string_longitude"
                        app:layout_constraintLeft_toRightOf="@+id/surfaceViewGraphOutlineVerticalPart"
                        app:layout_constraintRight_toLeftOf="@+id/textViewInvisibleForLongitudeSpaceAllocationTwoTwo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textViewMaxLongitudeLineOne"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:gravity="bottom|center"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:rotation="270"
                        android:text="@string/graph_longitude_max_header"
                        android:textColor="@color/colorBlack"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="@+id/textViewInvisibleForLongitudeSpaceAllocationTwoOne" />

                    <TextView
                        android:id="@+id/textViewInvisibleForLongitudeSpaceAllocationTwoTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="270"
                        android:text="@string/graph_constant_width_string_longitude"
                        app:layout_constraintLeft_toRightOf="@+id/textViewInvisibleForLongitudeSpaceAllocationTwoOne"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textViewMaxLongitudeLineTwo"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:gravity="bottom|center"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:rotation="270"
                        android:text="@string/graph_longitude_max"
                        android:textColor="@color/colorBlack"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="@+id/textViewInvisibleForLongitudeSpaceAllocationTwoTwo" />

                </android.support.constraint.ConstraintLayout>

        <include android:id="@+id/graph_layout_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/graph_layout_border"/>

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/surfaceViewGraphOutlineOuterLowerPart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surfaceViewGraphOutlineOuterUpperPart"
        app:layout_constraintVertical_weight="5"
        tools:context="com.enterprise.pc.applicationlocation.LocationGraphActivity">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scrollViewLowerPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:context="com.enterprise.pc.applicationlocation.LocationGraphActivity" >

            <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/horizontalScrollViewLowerPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/constraintLayoutControlsPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:context="com.enterprise.pc.applicationlocation.LocationGraphActivity">


                    <TextView
                        android:id="@+id/textViewInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/toggleButtonInformation"
                        app:layout_constraintBaseline_toBaselineOf="@+id/toggleButtonInformation"
                        android:text="@string/toggle_button_text"
                        app:layout_constraintHorizontal_chainStyle="packed"/>

                    <ToggleButton
                        android:id="@+id/toggleButtonInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textOn="@string/toggle_button_on_text"
                        android:textOff="@string/toggle_button_off_text"
                        app:layout_constraintLeft_toRightOf="@+id/textViewInformation"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textViewLiveGraph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/toggleButtonLiveGraph"
                        app:layout_constraintBaseline_toBaselineOf="@+id/toggleButtonLiveGraph"
                        android:text="@string/toggle_live_graph_text"
                        app:layout_constraintHorizontal_chainStyle="packed"/>

                    <ToggleButton
                        android:id="@+id/toggleButtonLiveGraph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textOn="@string/toggle_button_live_graph_on_text"
                        android:textOff="@string/toggle_button_live_graph_off_text"
                        app:layout_constraintLeft_toRightOf="@+id/textViewLiveGraph"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/toggleButtonInformation" />

                    <Button
                        android:id="@+id/buttonStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorButton"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/buttonStop"
                        app:layout_constraintBaseline_toBaselineOf="@+id/buttonStop"
                        android:text="@string/button_start_location_graph"
                        app:layout_constraintHorizontal_chainStyle="packed"/>

                    <Button
                        android:id="@+id/buttonStop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorButton"
                        android:text="@string/button_stop_location_graph"
                        app:layout_constraintLeft_toRightOf="@+id/buttonStart"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/toggleButtonLiveGraph" />


                    <Button
                        android:id="@+id/buttonSetStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@color/colorButton"
                        android:text="@string/button_set_start_time"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buttonStop" />


                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/controlsStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buttonSetStartTime"
                        app:layout_constraintBottom_toTopOf="@+id/controlsEndTime"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" >


                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/controlsEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/controlsStartTime"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" >


                    </android.support.constraint.ConstraintLayout>


                </android.support.constraint.ConstraintLayout>

            </HorizontalScrollView>

        </ScrollView>


        <include android:id="@+id/graph_layout_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/graph_layout_border"/>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
